let raceNumber = Math.floor(Math.random() * 1000);
const earlyReg = true;
const runnerAge = 19;

if (runnerAge > 18 && earlyReg === true) {
 raceNumber += 1000;
}

if (runnerAge > 18 && earlyReg === true) {
  console.log(`Hello, this is your race number: ${raceNumber} and you will be racing at 9.30am`);
}
else if (runnerAge > 18 && earlyReg === false) {
  console.log(`Hello, this is your race number: ${raceNumber} and you will be racing at 11.00am`);
}
else if (runnerAge < 18) {
  console.log(`Hello, this is your race number: ${raceNumber} and you will be racing at 12.30pm`);
} else {
  console.log("Please visit the registration desk");
}
